<UserControl x:Class="ArmagetronMapEditor.Views.FieldRender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
             Loaded="RenderLoaded" Unloaded="RenderUnloaded"
             SizeChanged="UserControl_SizeChanged">
    <Canvas x:Name="renderCanvas" Background="Navy"
            MouseLeftButtonDown="RenderCanvasMouseLeftButtonDown" 
            MouseLeftButtonUp="RenderCanvasMouseLeftButtonUp"
            MouseMove="RenderCanvasMouseMove"
            IsHitTestVisible="True"
            Mouse.MouseWheel="renderCanvas_MouseWheel"
            ClipToBounds="True" />
</UserControl>
